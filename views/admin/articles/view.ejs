<body>
    <% articles.forEach ((article) => {%> 
    <div class="container">
        <hr>
        <div class='card'>
            <div class="card-header">

                    <h3><%- article.title %></h3>
                
            </div>
            <div class="card-body">
                <%- article.body  %>
                <a href="/<%- article.slug %>" class="btn btn-success">Ver mais</a> 
            </div>
        </div>
    </div>
    <% }) %> 
</body>

